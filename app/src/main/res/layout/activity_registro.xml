<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#03A9F4"
    android:orientation="vertical"
    tools:context="bus.proyecto.busontime.Registro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Hola! Registrate"
                android:textColor="#FFFF"
                android:textSize="45sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/loginfb"
                android:layout_width="wrap_content"

                android:layout_height="48dp" />
            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/facebook_logo" />

                <Button
                    android:id="@+id/registroFB"
                    style="@style/BotonShido"
                    android:background="#3b5998"
                    android:textColor="#FFFF"
                    android:text="Registrate con Facebook" />
            </LinearLayout>-->
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o con tu e-mail"
                android:textColor="#FFFF"
                android:textSize="20sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="#FFFF" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="#FFFF"
                android:visibility="visible" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/repetir_contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Repetir Contraseña"
                android:inputType="textPassword"
                android:textColorHint="#FFFF" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre Completo"
                android:inputType="text"
                android:textColorHint="#FFFF" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <Spinner
                android:id="@+id/sexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_registro"
                style="@style/boton"
                android:layout_width="wrap_content"

                android:text="Registrarse" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="9dp" />

            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:text="Al dar clic en Registrarse, aceptas los terminos y condiciones de uso"
                android:textAlignment="center"
                android:textColor="#FFFF" />

            <TextView
                android:id="@+id/TV_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TV_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TV_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
